{
  "name": "shelltender",
  "version": "1.0.0",
  "private": true,
  "description": "A web-based terminal manager that keeps your shell sessions alive and persistent",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Jeff Harris",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "npm run build:all && npm run validate:esm",
    "build:all": "npm run build --workspaces --if-present",
    "build:packages": "npm run build:core && npm run build:server && npm run build:client",
    "build:core": "npm run build -w @shelltender/core",
    "build:server": "npm run build -w @shelltender/server",
    "build:client": "npm run build -w @shelltender/client",
    "validate:esm": "node scripts/validate-esm.js",
    "start": "node dist/index.js",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "keywords": [],
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^4.17.23",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.0.1",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/ui": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "postcss": "^8.5.6",
    "supertest": "^7.1.1",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "express": "^4.21.2",
    "minimist": "^1.2.8",
    "node-pty": "^1.0.0",
    "puppeteer": "^24.10.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  }
}
