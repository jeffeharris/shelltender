{
  "name": "shelltender",
  "version": "0.3.0",
  "description": "All-in-one package combining @shelltender/core, @shelltender/server, and @shelltender/client",
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "author": "Jeff Harris",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeffh/shelltender.git",
    "directory": "packages/shelltender"
  },
  "homepage": "https://github.com/jeffh/shelltender#readme",
  "bugs": {
    "url": "https://github.com/jeffh/shelltender/issues"
  },
  "keywords": [
    "terminal",
    "websocket",
    "pty",
    "react",
    "xterm",
    "session-management",
    "persistent-terminal",
    "shelltender"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@shelltender/core": "^0.3.0",
    "@shelltender/server": "^0.3.0",
    "@shelltender/client": "^0.3.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "directories": {
    "test": "tests"
  }
}
