# Shelltender Environment Configuration
# Copy this file to .env and adjust as needed

# Backend API port
PORT=3000

# WebSocket server port
WS_PORT=8080

# Vite development server port (development only)
VITE_PORT=5173

# WebSocket URL for frontend to connect to
VITE_WS_URL=ws://localhost:8080

# API URL for frontend
VITE_API_URL=http://localhost:3000

# Session configuration
SESSION_STORE_PATH=./sessions
SESSION_BUFFER_SIZE=10000

# Optional: Enable audit logging
# ENABLE_AUDIT=false

# Optional: Enable metrics
# ENABLE_METRICS=false

# Optional: AI Monitor integration
# AI_MONITOR_PORT=3001
# AI_MONITOR_WS_HOST=localhost
# AI_MONITOR_WS_PORT=8080
# SHELLTENDER_MONITOR_AUTH_KEY=your-secure-key-here